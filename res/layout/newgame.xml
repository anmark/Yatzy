<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/nrOfPlayersText" android:text="@string/newgame">
        <requestFocus></requestFocus>
    </EditText>
        <Spinner 
        android:id="@+id/nrOfPlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/players"
    />
        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/player1" android:visibility="invisible"></EditText>
        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/player2" android:visibility="invisible"></EditText>
        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/player3" android:visibility="invisible"></EditText>
        <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/player4" android:visibility="invisible"></EditText>

</LinearLayout>
